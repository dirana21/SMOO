<Window x:Class="LAB_7.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Students" Height="450" Width="800">
    <Window.Resources>
        
        <Style x:Key="AlternatingItemStyle" TargetType="ListBoxItem">
            <Setter Property="Background" Value="White"/>
            <Setter Property="Margin" Value="2"/>
            <Style.Triggers>
                <Trigger Property="ItemsControl.AlternationIndex" Value="1">
                    <Setter Property="Background" Value="#FFEFEFEF"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        
        <DataTemplate x:Key="StudentTemplate">
            <StackPanel Orientation="Horizontal" Margin="5">
                <TextBlock Text="{Binding FullName}" FontWeight="Bold" Margin="0,0,10,0"/>
                <TextBlock Text="{Binding AgeWithSuffix}" Margin="0,0,10,0"/>
                <TextBlock Text="{Binding Gender}" />
            </StackPanel>
        </DataTemplate>

        
        <DataTemplate x:Key="EmptyTemplate">
            <TextBlock Text="The student list is empty."
                       HorizontalAlignment="Center"
                       VerticalAlignment="Center"
                       FontStyle="Italic"
                       Foreground="Gray"/>
        </DataTemplate>
    </Window.Resources>

    <Grid Margin="10">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        
        <Border Grid.Row="0" Grid.Column="0" Margin="0,0,10,0" BorderBrush="Gray" BorderThickness="1">
            <Grid>
                <ListBox ItemsSource="{Binding Students}"
                         SelectedItem="{Binding SelectedStudent}"
                         ItemTemplate="{StaticResource StudentTemplate}"
                         ItemContainerStyle="{StaticResource AlternatingItemStyle}"
                         AlternationCount="2">
                    <ListBox.Style>
                        <Style TargetType="ListBox">
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding Students.Count}" Value="0">
                                    <Setter Property="Template">
                                        <Setter.Value>
                                            <ControlTemplate TargetType="ListBox">
                                                <ContentPresenter ContentTemplate="{StaticResource EmptyTemplate}"/>
                                            </ControlTemplate>
                                        </Setter.Value>
                                    </Setter>
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </ListBox.Style>
                </ListBox>
            </Grid>
        </Border>

        
        <StackPanel Grid.Row="0" Grid.Column="1" Margin="10,0,0,0">
            <TextBlock Text="LastName:"/>
            <TextBox Text="{Binding SelectedStudent.LastName, UpdateSourceTrigger=PropertyChanged, ValidatesOnDataErrors=True}" />

            <TextBlock Text="Name:" Margin="0,10,0,0"/>
            <TextBox Text="{Binding SelectedStudent.FirstName, UpdateSourceTrigger=PropertyChanged, ValidatesOnDataErrors=True}" />

            <TextBlock Text="Age:" Margin="0,10,0,0"/>
            <TextBox Text="{Binding SelectedStudent.Age, UpdateSourceTrigger=PropertyChanged, ValidatesOnDataErrors=True}" />

            <TextBlock Text="Gender:" Margin="0,10,0,0"/>
            <TextBox Text="{Binding SelectedStudent.Gender, UpdateSourceTrigger=PropertyChanged, ValidatesOnDataErrors=True}" />
        </StackPanel>
        
        <StackPanel Grid.Row="1" Grid.ColumnSpan="2"
                    Orientation="Horizontal"
                    HorizontalAlignment="Right"
                    Margin="0,10,0,0">
            <Button Content="Add"
                    Width="80"
                    Margin="5,0"
                    Command="{Binding AddStudentCommand}" />

            <Button Content="Edit"
                    Width="80"
                    Margin="5,0"
                    Command="{Binding EditStudentCommand}" />

            <Button Content="Delete"
                    Width="80"
                    Margin="5,0"
                    Command="{Binding DeleteStudentCommand}" />

            <Button Content="Save"
                    Width="80"
                    Margin="5,0"
                    Command="{Binding SaveCommand}" />
        </StackPanel>
    </Grid>
</Window>
