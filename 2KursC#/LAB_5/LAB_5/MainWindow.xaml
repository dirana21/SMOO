<Window x:Class="LAB_5.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Launcher" Width="520" Height="260" WindowStartupLocation="CenterScreen"
        Background="#FFFDFEFE">
    <Grid Margin="24">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="20"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <TextBlock Text="Auth demo" FontSize="22" FontWeight="Bold"/>

        <Border Grid.Row="2" Style="{StaticResource Card}">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                <StackPanel.Resources>
                    <Style TargetType="Button">
                        <Setter Property="Width" Value="160"/>
                        <Setter Property="Height" Value="44"/>
                        <Setter Property="Margin" Value="8"/>
                    </Style>
                </StackPanel.Resources>

                <Button Content="Login"    Style="{StaticResource FancyButton}" Click="OnOpenLogin"/>
                <Button Content="Register" Style="{StaticResource FancyButton}" Click="OnOpenRegister"/>
            </StackPanel>
        </Border>
    </Grid>
</Window>