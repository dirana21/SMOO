<Window x:Class="LAB_5.Views.Auth.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Login"
        Width="460" MinWidth="460"
        Height="560" MinHeight="560"
        WindowStartupLocation="CenterScreen"
        Background="#FFFDFEFE"
        SizeToContent="Manual">

    <Grid Margin="24">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="20"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="12"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Заголовок -->
        <TextBlock Text="Welcome back" FontSize="22" FontWeight="Bold"/>

        <!-- Карта с формой -->
        <Border Grid.Row="2" Style="{StaticResource Card}" HorizontalAlignment="Stretch">
            
            <Grid Width="340" HorizontalAlignment="Center">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <!-- Username label -->
                    <RowDefinition Height="Auto"/>
                    <!-- Username box -->
                    <RowDefinition Height="12"/>
                    <RowDefinition Height="Auto"/>
                    <!-- Password label -->
                    <RowDefinition Height="Auto"/>
                    <!-- Password box -->
                    <RowDefinition Height="16"/>
                    <RowDefinition Height="Auto"/>
                    <!-- Login button -->
                    <RowDefinition Height="20"/>
                    <RowDefinition Height="Auto"/>
                    <!-- "Or sign in using" -->
                    <RowDefinition Height="12"/>
                    <RowDefinition Height="Auto"/>
                    <!-- Social buttons -->
                </Grid.RowDefinitions>

                <!-- Username -->
                <TextBlock Grid.Row="0" Text="Username" Style="{StaticResource MutedLabel}" Margin="4,2,0,4"/>
                <TextBox  x:Name="tbUsername"
                          Grid.Row="1"
                          Style="{StaticResource OutlinedTextBox}"
                          HorizontalAlignment="Stretch"
                          Margin="4,0,0,4"/>

                <!-- Password -->
                <TextBlock Grid.Row="3" Text="Password" Style="{StaticResource MutedLabel}" Margin="4,2,0,4"/>
                <PasswordBox x:Name="pbPassword"
                             Grid.Row="4"
                             Style="{StaticResource OutlinedPasswordBox}"
                             HorizontalAlignment="Stretch"
                             Margin="4,0,0,4"/>

                <!-- Login -->
                <Button Grid.Row="6"
                        Content="Login"
                        Height="44"
                        Style="{StaticResource FancyButton}"
                        Click="OnLogin"
                        HorizontalAlignment="Stretch"/>

                <!-- Social title -->
                <TextBlock Grid.Row="8"
                           Text="Or sign in using"
                           HorizontalAlignment="Center"
                           Foreground="{StaticResource MutedBrush}"/>

                <!-- Social buttons -->
                <UniformGrid Grid.Row="10" Rows="1" Columns="3" Margin="0,0,0,0">
                    <Button Content="Google"   Margin="6,0" Click="OnSocialLogin"/>
                    <Button Content="Facebook" Margin="6,0" Click="OnSocialLogin"/>
                    <Button Content="Twitter"  Margin="6,0" Click="OnSocialLogin"/>
                </UniformGrid>
            </Grid>
        </Border>

        <StackPanel Grid.Row="4" Orientation="Horizontal" HorizontalAlignment="Center">
            <TextBlock Text="No account yet?" Foreground="{StaticResource MutedBrush}" Margin="0,0,8,0"/>
            <Button Content="Sign up" Click="OnGoRegister"/>
        </StackPanel>
    </Grid>
</Window>
