<UserControl x:Class="LAB_4.Views.Task2View.Task2View"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Grid Margin="12">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="12"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <GroupBox Header="Gas Station" Grid.Column="0" Padding="10" Margin="0,0,10,0">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="12"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="140"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="80"/>
                </Grid.ColumnDefinitions>

                <TextBlock Text="Fuel" VerticalAlignment="Center"/>
                <ComboBox x:Name="FuelBox" Grid.Column="1" Margin="8,0" SelectionChanged="OnFuelChanged"/>

                <TextBlock Grid.Row="1" Text="Price" VerticalAlignment="Center"/>
                <TextBox x:Name="FuelPriceBox" Grid.Row="1" Grid.Column="1" Margin="8,0" IsReadOnly="True"/>
                <TextBlock Grid.Row="1" Grid.Column="2" Text="UAH" VerticalAlignment="Center"/>

                <StackPanel Grid.Row="2" Grid.ColumnSpan="3" Orientation="Horizontal" Margin="0,8,0,0">
                    <RadioButton x:Name="RbByLiters" Content="By liters" IsChecked="True" Checked="OnModeChanged" Margin="0,0,20,0"/>
                    <TextBox x:Name="LitersBox" Width="120" Margin="8,0,20,0" TextChanged="OnFuelInputChanged"/>
                    <RadioButton x:Name="RbByAmount" Content="By amount" Checked="OnModeChanged" Margin="0,0,8,0"/>
                    <TextBox x:Name="AmountBox" Width="120" IsEnabled="False" TextChanged="OnFuelInputChanged"/>
                    <TextBlock x:Name="FuelUnitText" Text="L" VerticalAlignment="Center" Margin="8,0,0,0"/>
                </StackPanel>

                <Border Grid.Row="4" Grid.ColumnSpan="3" Margin="0,8,0,0" Padding="10" BorderBrush="#DDD" BorderThickness="1" CornerRadius="6">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition/>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="80"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock x:Name="FuelPayCaption" Text="To pay" FontWeight="SemiBold" VerticalAlignment="Center"/>
                        <TextBlock x:Name="FuelPayValue" Grid.Column="1" Text="0.00" FontSize="24" FontWeight="SemiBold" Margin="12,0"/>
                        <TextBlock x:Name="FuelPayUnit"  Grid.Column="2" Text="UAH" VerticalAlignment="Center"/>
                    </Grid>
                </Border>
            </Grid>
        </GroupBox>

        <GroupBox Header="Mini-Cafe" Grid.Column="1" Padding="10" Margin="10,0,0,0">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="90"/>
                    <ColumnDefinition Width="90"/>
                </Grid.ColumnDefinitions>

                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="35"/>
                    <RowDefinition Height="35"/>
                    <RowDefinition Height="35"/>
                    <RowDefinition Height="35"/>
                    <RowDefinition Height="12"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <TextBlock Grid.Column="1" Text="Price" FontStyle="Italic" VerticalAlignment="Center" Margin="0,0,0,5"/>
                <TextBlock Grid.Column="2" Text="Qty" FontStyle="Italic" VerticalAlignment="Center" Margin="0,0,0,5"/>

                <CheckBox x:Name="CbHotDog" Grid.Row="1" Content="Hot-dog" VerticalAlignment="Center"
                  Checked="OnCafeChecked" Unchecked="OnCafeChecked"/>
                <TextBox x:Name="PriceHotDog" Grid.Row="1" Grid.Column="1" Text="4.00" IsReadOnly="True" VerticalAlignment="Center"/>
                <TextBox x:Name="QtyHotDog" Grid.Row="1" Grid.Column="2" Text="0" IsEnabled="False"
                 VerticalAlignment="Center" TextChanged="OnCafeQtyChanged"/>

                <CheckBox x:Name="CbHamburger" Grid.Row="2" Content="Hamburger" VerticalAlignment="Center"
                  Checked="OnCafeChecked" Unchecked="OnCafeChecked"/>
                <TextBox x:Name="PriceHamburger" Grid.Row="2" Grid.Column="1" Text="5.40" IsReadOnly="True" VerticalAlignment="Center"/>
                <TextBox x:Name="QtyHamburger" Grid.Row="2" Grid.Column="2" Text="0" IsEnabled="False"
                 VerticalAlignment="Center" TextChanged="OnCafeQtyChanged"/>

                <CheckBox x:Name="CbFries" Grid.Row="3" Content="French fries" VerticalAlignment="Center"
                  Checked="OnCafeChecked" Unchecked="OnCafeChecked"/>
                <TextBox x:Name="PriceFries" Grid.Row="3" Grid.Column="1" Text="7.20" IsReadOnly="True" VerticalAlignment="Center"/>
                <TextBox x:Name="QtyFries" Grid.Row="3" Grid.Column="2" Text="0" IsEnabled="False"
                 VerticalAlignment="Center" TextChanged="OnCafeQtyChanged"/>

                <CheckBox x:Name="CbCola" Grid.Row="4" Content="Coca-Cola" VerticalAlignment="Center"
                  Checked="OnCafeChecked" Unchecked="OnCafeChecked"/>
                <TextBox x:Name="PriceCola" Grid.Row="4" Grid.Column="1" Text="4.40" IsReadOnly="True" VerticalAlignment="Center"/>
                <TextBox x:Name="QtyCola" Grid.Row="4" Grid.Column="2" Text="0" IsEnabled="False"
                 VerticalAlignment="Center" TextChanged="OnCafeQtyChanged"/>

                <Border Grid.Row="6" Grid.ColumnSpan="3" Margin="0,8,0,0" Padding="10"
                BorderBrush="#DDD" BorderThickness="1" CornerRadius="6">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition/>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="80"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock Text="To pay" FontWeight="SemiBold" VerticalAlignment="Center"/>
                        <TextBlock x:Name="CafePayValue" Grid.Column="1" Text="0.00" FontSize="24" FontWeight="SemiBold" Margin="12,0"/>
                        <TextBlock Grid.Column="2" Text="UAH" VerticalAlignment="Center"/>
                    </Grid>
                </Border>
            </Grid>
        </GroupBox>

        <GroupBox Header="Total" Grid.Row="2" Grid.ColumnSpan="2" Padding="10">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                <Button Content="Calculate" Width="160" Height="40" Click="OnCalcTotal"/>
                <TextBlock Grid.Column="2" x:Name="TotalValue" Text="0.00" FontSize="28" FontWeight="Bold"/>
            </Grid>
        </GroupBox>
    </Grid>
</UserControl>
