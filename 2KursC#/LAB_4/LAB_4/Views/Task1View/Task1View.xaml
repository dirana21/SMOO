<UserControl x:Class="LAB_4.Views.Task1View.Task1View"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Grid Margin="16" PreviewKeyDown="OnPreviewKeyDown">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="12"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <TextBox x:Name="HistoryBox"
                 Grid.Row="0"
                 IsReadOnly="True" Focusable="False"
                 BorderThickness="0"
                 FontSize="16" Foreground="#666"
                 HorizontalContentAlignment="Right"/>

        <TextBox x:Name="DisplayBox"
                 Grid.Row="1"
                 IsReadOnly="True" Focusable="False"
                 BorderThickness="0"
                 FontSize="36" FontWeight="SemiBold"
                 Text="0"
                 HorizontalContentAlignment="Right"/>

        <Grid Grid.Row="3">
            <Grid.RowDefinitions>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>

            <Button Grid.Row="0" Grid.Column="0" Content="CE" Click="OnClearEntry" Margin="4"/>
            <Button Grid.Row="0" Grid.Column="1" Content="C"  Click="OnClearAll"  Margin="4"/>
            <Button Grid.Row="0" Grid.Column="2" Content="⌫" Click="OnBackspace" Margin="4"/>
            <Button Grid.Row="0" Grid.Column="3" Content="÷" Click="OnBinaryOp"  Margin="4"/>

            <Button Grid.Row="1" Grid.Column="0" Content="√x" Click="OnUnaryOp" Margin="4"/>
            <Button Grid.Row="1" Grid.Column="1" Content="x²" Click="OnUnaryOp" Margin="4"/>
            <Button Grid.Row="1" Grid.Column="2" Content="1/x" Click="OnUnaryOp" Margin="4"/>
            <Button Grid.Row="1" Grid.Column="3" Content="×"   Click="OnBinaryOp" Margin="4"/>

            <Button Grid.Row="2" Grid.Column="0" Content="7" Click="OnDigit" Margin="4"/>
            <Button Grid.Row="2" Grid.Column="1" Content="8" Click="OnDigit" Margin="4"/>
            <Button Grid.Row="2" Grid.Column="2" Content="9" Click="OnDigit" Margin="4"/>
            <Button Grid.Row="2" Grid.Column="3" Content="−" Click="OnBinaryOp" Margin="4"/>

            <Button Grid.Row="3" Grid.Column="0" Content="4" Click="OnDigit" Margin="4"/>
            <Button Grid.Row="3" Grid.Column="1" Content="5" Click="OnDigit" Margin="4"/>
            <Button Grid.Row="3" Grid.Column="2" Content="6" Click="OnDigit" Margin="4"/>
            <Button Grid.Row="3" Grid.Column="3" Content="+" Click="OnBinaryOp" Margin="4"/>

            <Button Grid.Row="4" Grid.Column="0" Content="1" Click="OnDigit" Margin="4"/>
            <Button Grid.Row="4" Grid.Column="1" Content="2" Click="OnDigit" Margin="4"/>
            <Button Grid.Row="4" Grid.Column="2" Content="3" Click="OnDigit" Margin="4"/>
            <Button Grid.Row="4" Grid.Column="3" Grid.RowSpan="2" Content="=" Click="OnEquals" Margin="4"/>

            <Button Grid.Row="5" Grid.Column="0" Content="±" Click="OnSign" Margin="4"/>
            <Button Grid.Row="5" Grid.Column="1" Content="0" Click="OnDigit" Margin="4"/>
            <Button Grid.Row="5" Grid.Column="2" Content="," Click="OnDecimal" Margin="4"/>
            <Button Grid.Row="5" Grid.Column="3" Content="%" Click="OnPercent" Margin="4" Visibility="Collapsed"/>
        </Grid>
    </Grid>
</UserControl>
