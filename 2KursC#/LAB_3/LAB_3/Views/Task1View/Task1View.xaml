<UserControl x:Class="LAB_3.Views.Task1View.Task1View"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Grid Margin="16">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Label x:Name="StatusLabel"
               Content="Початок роботи"
               FontSize="20"
               HorizontalAlignment="Center"
               Margin="0,0,0,16"/>

        <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Center">
            <Button Content="Привіт" Padding="16,8" Click="OnHello" Margin="6,0"/>
            <Button Content="До побачення" Padding="16,8" Click="OnBye" Margin="6,0"/>
        </StackPanel>
    </Grid>
</UserControl>
