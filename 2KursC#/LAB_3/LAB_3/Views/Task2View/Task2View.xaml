<UserControl x:Class="LAB_3.Views.Task2View.Task2View"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <DockPanel Margin="16">
        <StackPanel DockPanel.Dock="Top" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,0,0,12">
            <Button Content="Hide"  Padding="16,8" Margin="6,0" Click="OnHide"/>
            <Button Content="Show" Padding="16,8" Margin="6,0" Click="OnShow"/>
        </StackPanel>

        
        <Border Padding="12" BorderBrush="LightGray" BorderThickness="1">
            <TextBlock x:Name="TheText"
                       Text="Demonstration text for visibility demonstration."
                       TextWrapping="Wrap" FontSize="16"/>
        </Border>
    </DockPanel>
</UserControl>